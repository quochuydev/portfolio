datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["orderByRelation", "selectRelationCount"]
}

model Post {
  id        String   @id @default(cuid())
  slug      String   
  title     String
  body      String
  image     String
  likes     Int      @default(1)
  views     Int      @default(0)
  createdAt DateTime @default(now())
}
